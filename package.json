{
    "name": "survey",
    "version": "0.1.0",
    "private": false,
    "license": "MIT",
    "dependencies": {
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-scripts": "^5.0.0",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "export NODE_OPTIONS=--openssl-legacy-provider; react-scripts build",
        "test": "react-scripts test --maxWorkers=2 --ci --coverage --reporters=default --reporters=jest-junit",
        "eject": "react-scripts eject",
        "prettier": "prettier **/*.md **/*.js **/*.json **/*.yml --write",
        "lint:prettier": "prettier --check **/*.md **/*.js **/*.json **/*.yml"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "jest-junit": "^10.0.0",
        "prettier": "2.5.1",
        "react-test-renderer": "^17.0.1"
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": ".",
        "outputName": "test-results/junit.xml",
        "classNameTemplate": "{classname}-{title}",
        "titleTemplate": "{classname}-{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
    }
}
